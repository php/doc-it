<refentry xml:id="context.zip" xmlns="http://docbook.org/ns/docbook" xmlns:xlink="http://www.w3.org/1999/xlink" annotations="verify_info:false" role="stream_context_option">
 <refnamediv>
  <refname>Opzioni di contesto Zip</refname>
  <refpurpose>Elenco delle opzioni di contesto Zip</refpurpose>
 </refnamediv>

 <refsect1 role="description"><!-- {{{ -->
  &reftitle.description;
  <para>
   Le opzioni di contesto Zip sono disponibili per i wrapper <literal>zip</literal>.
  </para>
 </refsect1><!-- }}} -->

 <refsect1 role="options"><!-- {{{ -->
  &reftitle.options;
  <para>
   <variablelist>
    <varlistentry xml:id="context.zip.password">
     <term><parameter>password</parameter></term>
     <listitem>
      <para>
       Utilizzato per specificare la password per gli archivi crittografati.
      </para>
     </listitem>
    </varlistentry>
   </variablelist>
  </para>
 </refsect1><!-- }}} -->

 <refsect1 role="changelog"><!-- {{{ -->
  &reftitle.changelog;
  <para>
   <informaltable>
    <tgroup cols="2">
     <thead>
      <row>
       <entry>&Version;</entry>
       <entry>&Description;</entry>
      </row>
     </thead>
     <tbody>
      <row>
       <entry>7.2.0, PECL zip 1.14.0</entry>
       <entry>
        Aggiunto <parameter>password</parameter>.
       </entry>
      </row>
     </tbody>
    </tgroup>
   </informaltable>
  </para>
 </refsect1><!-- }}} -->

 <refsect1 role="examples"><!-- {{{ -->
  &reftitle.examples;
  <para>
   <example xml:id="context.zip.example-password"><!-- {{{ -->
    <title>Esempio di utilizzo base di <parameter>password</parameter></title>
    <programlisting role="php">
<![CDATA[
<?php
// Legge l'archivio crittografato
$opts = array(
    'zip' => array(
        'password' => 'secret',
    ),
);
// crea il contesto...
$context = stream_context_create($opts);

// ...e lo utilizza per recuperare i dati
echo file_get_contents('zip://test.zip#test.txt', false, $context);

?>
]]>
    </programlisting>
   </example><!-- }}} -->
  </para>
 </refsect1><!-- }}} -->

</refentry>

